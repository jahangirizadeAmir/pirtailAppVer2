<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_gravity="right"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    tools:context=".Gamer.Fragment.FragmentUserFrame">

    <ImageView
        android:id="@+id/img_user_frame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/red_bg_empty"
        android:paddingTop="@dimen/padding_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:paddingEnd="@dimen/padding2"
                    android:paddingRight="@dimen/padding2"
                    android:paddingBottom="@dimen/padding2"
                    android:paddingTop="@dimen/padding18"
                    android:paddingStart="@dimen/padding35"
                    android:paddingLeft="@dimen/padding35">

                    <TextView
                        android:id="@+id/txt_dimound_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:text="@string/txt_dimound_count"
                        android:textSize="10sp"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/padding27">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="تعداد الماس"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="7sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:paddingStart="@dimen/padding_15"
                android:paddingLeft="@dimen/padding_15"
                android:paddingBottom="@dimen/padding2">

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="snvjlas"
                    android:textColor="#E01D59"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:paddingStart="@dimen/padding_50"
                android:paddingBottom="@dimen/padding25"
                android:paddingLeft="@dimen/padding_50">

                <TextView
                    android:id="@+id/txt_user_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="150"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_charracter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_user_charracter"
                android:paddingEnd="@dimen/padding11"
                android:paddingBottom="@dimen/padding_15"
                android:paddingRight="@dimen/padding11" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>