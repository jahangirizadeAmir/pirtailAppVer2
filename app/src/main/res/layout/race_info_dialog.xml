<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_shop_shape">
    <TextView
        android:textColor="@color/color_pink_light"
        android:id="@+id/txt_challange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="توضیحات ایونت"
        android:textSize="@dimen/fontsize18"/>
    <TextView
        android:id="@+id/desc"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txt_challange_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="مکان ایونت"
        android:textColor="@color/color_pink_light"
        android:textSize="@dimen/fontsize18" />
    <TextView
        android:id="@+id/address"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="@color/color_pink_light"
        android:id="@+id/txt_time_challange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="زمان ایونت"
        android:textSize="@dimen/fontsize18"/>
    <TextView
        android:layout_margin="@dimen/margin_20"
        android:id="@+id/time"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        />
</LinearLayout>