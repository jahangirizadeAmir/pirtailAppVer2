<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_bg"
    android:orientation="vertical"
    tools:context=".Gamer.Activity.Main4Activity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/frame_user_info"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:scaleType="fitEnd"
            android:src="@drawable/yellow_frame_user_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_user_character"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/frame_user_info"
            app:layout_constraintEnd_toEndOf="@+id/frame_user_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_user_charracter" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="120dp"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/frame_user_info"
            android:layout_alignLeft="@+id/frame_user_info"
            android:layout_alignTop="@+id/frame_user_info"
            android:layout_alignEnd="@+id/frame_user_info"
            android:layout_alignRight="@+id/frame_user_info"
            android:layout_alignBottom="@+id/frame_user_info"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="username"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/frame_user_info"
            app:layout_constraintEnd_toStartOf="@+id/img_user_character"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/frame_user_info"
            app:layout_constraintTop_toTopOf="@+id/frame_user_info"
            app:layout_constraintVertical_bias="0.385" />

        <TextView
            android:id="@+id/txt_user_ranking"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/frame_user_info"
            android:layout_alignRight="@+id/frame_user_info"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="رتبه:‌۱۵۰"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/frame_user_info"
            app:layout_constraintEnd_toEndOf="@+id/txt_username"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="@+id/txt_username"
            app:layout_constraintTop_toBottomOf="@+id/txt_username" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/btn_challenge"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:background="@drawable/img_bowling_game"
            android:gravity="center"
            android:text="بولینگ بوستان"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="50dp">

        <Button
            android:id="@+id/btn_find_diamond"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/green_rectangular_box"
            android:text="جستجوی الماس"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>